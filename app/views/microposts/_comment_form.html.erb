<div id="comment_form">
  <%= form_with(url: comments_path(micropost), model: micropost.comments.build, local: true) do |f| %>
    <div><%= f.hidden_field :micropost_id, :value => micropost.id %></div>
    <%= f.text_area :content, placeholder: "コメントを入力" %>
    <%= f.submit "Send", class: "btn btn-primary" %>
  <% end %>
</div>