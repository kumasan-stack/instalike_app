<% title = session[:forwarding_path] == edit_user_registration_path ?
            "プロフィール編集" : "パスワード変更" %>
<% provide(:title, title) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2><%= title %></h2>
    <%= render "edit_form" %>
    <% if session[:forwarding_path] == edit_user_registration_path %>
      <%= button_to "パスワード変更", edit_password_user_registration_path, method: :get %>
      <%= button_to "アカウント削除", registration_path(resource_name),
      data: { confirm: "全てのデータが削除されますが本当によろしいですか?" }, method: :delete %>
    <% else %>
      <%= link_to "プロフィール編集へ戻る", edit_user_registration_path %>
    <% end %>
  </div>
</div>
